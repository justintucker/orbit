---
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";

const title = "Home";
const description = "Home page description";
const permalink = Astro.url.href;
const articleEntries = await getCollection("articles");
---

<Layout title={title} description={description} permalink={permalink}>
  <p>Home Page</p>
  <ul>
    {
      articleEntries.map((articlePostEntry) => (
        <li>
          <a href={`/${articlePostEntry.slug}`}>
            {articlePostEntry.data.title}
          </a>
        </li>
      ))
    }
  </ul>
</Layout>
