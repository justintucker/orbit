---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

export interface Props {
  title: string;
  description: string;
  permalink: string;
}
const { title, description, permalink, canonical } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      permalink={permalink}
      canonical={canonical}
    />
  </head>
  <body>
    <div class="layout">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
    <style>
      .layout {
        margin: 0 auto;
        max-width: 1180px;
        padding: 0 20px;
      }
    </style>
  </body>
</html>
